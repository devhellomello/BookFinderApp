<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookFinder.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="bookImage"
                HeightRequest="185"
                HorizontalOptions="Center" />

            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="7">
            <Label
                x:Name="bookAuthor"/>
            <Label 
                Text="Author(s): "/> 
            </HorizontalStackLayout>
        
            <Entry 
                x:Name="booksEntry"
                Placeholder="Enter book name here."
                HeightRequest="40"
                BackgroundColor="white" />

            <Button
                x:Name="BookSearchBtn"
                Text="Search Books" 
                Clicked="ClickOnSearch"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
